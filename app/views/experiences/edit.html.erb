<table style="width:100%;" cellpadding="5" class="well">
<% @experiences.each do |s| %>
	<tr>
		<td style="text-align:left">
			<%= s.desc %>
		</td>
		<td style="text-align:right">
			<%= s.from %> - <%= s.from %>
		</td>
	</tr>
	<tr>
		<td style="text-align:left">
	    	<%= link_to s.name, s.website %>
		</td>
		<td style="text-align:right">
	    	<%= link_to image_tag("delete.png", :border => 0, :size => "10x10"), s, method: :delete, data: { confirm: 'Are you sure?' }, class: "btnTokenClose" %>
		</td>
	</tr>
<% end %>
</table>
<br/>
<hr/>

<%= render 'form' %>