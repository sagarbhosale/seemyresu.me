<table style="width:100%">
	<% @achievements.each do |a| %>
	<tr>
		<td style="padding:10px;">
		    <span style="color:#888;padding-top:20px;"><i><%= a.year %><i></span>
		    <br/>
		    <%= a.description %>
		</td>
		<td style="width:20px;">
		    <%= link_to image_tag("delete.png", :border => 0, :size => "10x10"), a, method: :delete, data: { confirm: 'Are you sure?' }, class: "btnTokenClose" %>
		</td>
	</tr>
	<% end %>
</table>
<br/>
<hr/>

<%= render 'form' %>