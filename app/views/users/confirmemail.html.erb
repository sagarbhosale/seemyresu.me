<%= form_tag action: "confirmuser" do %>
  <div class="field">
    Hi,<br /><%= @tmpuser[:firstname] %>
    <%= hidden_field_tag 'firstname', @tmpuser[:firstname] %>
  </div>
  <div class="field">
    <%= hidden_field_tag 'code', @tmpuser[:code] %>
  </div>
  <div class="field">
    This is your email:<br /><%= @tmpuser[:email] %>
    <%= hidden_field_tag 'email', @tmpuser[:email] %>
  </div>
  <div class="field">
    And set a new password for your account<br />
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    Confirm password<br />
    <%= password_field_tag :confirmpassword %>
  </div>
  <div class="actions">
    <%= submit_tag "Submit and Login", class: "btn btn-success" %>
  </div>
<% end %>
